{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "../dist/server",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "types": ["node"],
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "isolatedModules": false
  },
  "include": ["**/*.ts", "../shared/types.ts"],
  "exclude": ["node_modules", "dist"]
}
