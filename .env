# ============================================================
# SENDGRID CONFIGURATION (For email notifications)
# ============================================================
# Get API key from SendGrid dashboard (server-side only, no VITE_ prefix)
# WARNING: If not set, email features will be disabled
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# ============================================================
# PAYMENT GATEWAY CONFIGURATION
# ============================================================

# --- FLUTTERWAVE (for bank transfers) ---
# Public key for client-side Flutterwave initialization
VITE_FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST_your-public-key

# Secret key for server-side payment verification (server-side only, no VITE_ prefix)
# WARNING: If not set, Flutterwave payment verification will fail
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST_your-secret-key

# --- PAYPACK (for mobile money payments) ---
# PayPack Application ID and Secret for mobile payment integration
PAYPACK_APPLICATION_ID=your-paypack-app-id
PAYPACK_APPLICATION_SECRET=your-paypack-app-secret

# Optional PayPack callback URL
PAYPACK_CALLBACK_URL=https://yourdomain.com/api/payments/paypack/callback

# ============================================================
# ADMIN & SUPPORT CONFIGURATION
# ============================================================
# Admin email for receiving issue reports and support inquiries
ADMIN_REPORT_EMAIL=admin@househelp.rw

# ============================================================
# APP CONFIGURATION
# ============================================================
# Port for the development server
PORT=5173

# Message for the /api/ping endpoint (custom health check message)
PING_MESSAGE=pong

# API base URL for client-side requests (defaults to http://localhost:5173/api in dev)
VITE_API_URL=http://localhost:5173/api

