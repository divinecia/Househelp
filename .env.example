# ============================================================
# SUPABASE CONFIGURATION
# ============================================================
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here

# Client-side Supabase config (same values, prefixed with VITE_)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# ============================================================
# SENDGRID CONFIGURATION (For email notifications)
# ============================================================
# Get API key from SendGrid dashboard
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# ============================================================
# FLUTTERWAVE CONFIGURATION (For payments)
# ============================================================
# Get these from Flutterwave dashboard
VITE_FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST_your-public-key
VITE_FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST_your-secret-key

# ============================================================
# APP CONFIGURATION
# ============================================================
# Port for the development server
PORT=5173

# Message for the /api/ping endpoint
PING_MESSAGE=pong

# ============================================================
# OPTIONAL: Google Calendar Integration
# ============================================================
# GOOGLE_CALENDAR_API_KEY=your-api-key

# ============================================================
# OPTIONAL: Twilio Configuration (For SMS notifications)
# ============================================================
# TWILIO_ACCOUNT_SID=your-account-sid
# TWILIO_AUTH_TOKEN=your-auth-token
# TWILIO_PHONE_NUMBER=+1234567890
